shell $SHELL

# escape ^zz # Instead of Control-a, make the escape/command character be Control-z
escape ^xx # Instead of Control-a, make the escape/command character be Control-x
defscrollback 10000

hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %d/%m %{W}%c %{g}]'

#screen -t misc       1
#screen -t webstrips  2
#screen -t autotest   3

#Fix scrollback in putty and Mac terminal
termcapinfo xterm* ti@:te@

autodetach on # Autodetach session on hangup instead of terminating screen completely

#This line tells Screen to write its copy buffer to a temporary file (defaults to /tmp/screen-exchange)
#and then sends that file to pbcopy, a Mac OSX utility that copies text into the Mac clipboard.
bind b eval "writebuf" "exec sh -c 'pbcopy < /tmp/screen-exchange'"

#to enable multiuser: sudo chmod u+s `which screen`

#multiuser on
#aclchg saimon -x "?"    #Revoke permission to execute any screen command
#aclchg saimon +x "wall" #Allow writing simple messages in the terminal status line
